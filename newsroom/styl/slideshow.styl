main article {

	header .social {
		display: inline-block;

		a {
			fill: rgba(255, 255, 255, .7);
			&:hover {
				fill: rgba(255, 255, 255, .9);
			}
		}
	}

	[data-widget="image"] {

		figure {
			position: absolute;
			top: 0;
			right: 0;
			bottom: 0;
			left: 0;

			img {
				visibility: hidden;
			}
			.projection {
				position: absolute;
				top: 0;
				right: 0;
				bottom: 0;
				left: 0;

				background-size: cover;
				background-repeat: no-repeat;
				background-position: 50% 50%;
			}
		}

		.underlay-me {
			z-index: 1;
		}

		&.overlay {
			figcaption {
				background-color: transparent;
				z-index: 2;
			}
			.underlay-me {
				&:before {
					content: "";

					position: absolute;
					top: -30%;
					right: 0;
					bottom: 0;
					left: 0;

					background-image: linear-gradient(top,
						rgba(0, 0, 0, 0),
						rgba(0, 0, 0, .5) 20%,
						rgba(0, 0, 0, .75) 40%,
						rgba(0, 0, 0, 1));

					// To adjust the darkness of the overlay we can limit
					// ourself to tweaking the opacity.
					opacity: .4;

					z-index: -1;
				}
			}
		}
	}

	.body {
		position: absolute;
		right: 0;
		bottom: 0;
		left: 0;

		padding: 0 1.4em 1em 1.4em;

		color: White;

		// This table magic is really a hack - [this proof of concept] may shed
		// some light on what's going on.

		&.button-with-heading {
			// This slides part of the overlay out of the viewport, but as long
			// the gradient curve is flat in the text part this doesn't really
			// change anything in practice.
			margin-bottom: -50px;
			h1,
			h2 {
				display: table-row;
			}
			.calltoaction {
				position: relative;
				top: -50px;
			}
		}

		.text-and-button {
			display: table-row;
			& > * {
				display: table-cell;
			}
			& > .text {
				width: 100%;
				a {
					color: White;
				}
			}
			& > .button {
				vertical-align: bottom;
				padding-left: 1em;
				padding-bottom: .25em;
			}
		}

		& > h1,
		& > h2,
		& > p {
			margin-top: 0;
			& ~ h1,
			& ~ h2,
			& ~ p {
				margin-top: inherit;
			}
		}
	}

}

// TODO: Move generic styling to `slider.styl`(?)
#slidenav {
	position: absolute;
	top: 0;
	right: 0;
	left: 0;
	height: 50px;
	line-height: 50px;
	letter-spacing: .2em;
	text-align: center;
	z-index: 2;

	pointer-events: none;
	& > div {
		display: inline-block;
		pointer-events: auto;
	}

	button {
		outline: 0 none;
		white-space: nowrap;
		display: inline-block;
		vertical-align: middle;
		appearance: none;
		margin: 0;
		padding: 0;
		border: 0 none;
		width: 10px;
		height: 10px;
		border-radius: 5px;
		background-color: rgba(42, 52, 56, .4);
		cursor: pointer;

		// TODO: Do not include `:focus` until we have meshed out how it should
		// behave in combination with keyboard navigation. When clicking on a
		// navigation button (and thus giving it the focus), and then
		// navigating to another slide using the keyboard, the focus will still
		// be on the clicked button, keeping it "focus highlighted", which
		// feels weird.
		&:hover {
			background-color: rgba(42, 52, 56, .7);
		}		
		&:active, &.selected {
			background-color: #8ec4fe;
		}
	}
}