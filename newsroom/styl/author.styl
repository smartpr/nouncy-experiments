#author {
	position: absolute;
	top: 20px;
	left: 0;
	height: 50px;

	font-size: 1.2em;

	// color: White;

	a {
		display: inline-block;
		height: 100%;

		outline: 0 none;
		color: inherit;

		text-decoration: none;
		white-space: nowrap;
		vertical-align: middle;
	}

	.newsroom {
		// Make sure we overlay the subscribe button that follows this
		// element.
		position: relative;
		z-index: 1;

		& > * {
			vertical-align: top;
		}

		img {
			min-height: 100%;
			// Golden ratio heh 8-)
			max-height: 162%;
		}

		.description {
			display: inline-block;
			height: 100%;
			line-height: 50px;
			padding: 0 1em;
			// line-height: 1;

			// box-sizing: border-box;
			// padding: 9px 17px 0 12px;

			h1 {
				display: inline;
				margin: 0;
				font-size: inherit;
				font-weight: inherit;
			}
			.count {
				color: lighten(rgb(142, 196, 254), 50%);
				margin-left: .5em;
				// font-size: .7em;
				// text-transform: uppercase;
				// letter-spacing: .01em;
			}
			// transition: background-color .5s;
			background-color: rgb(142, 196, 254);
		}
		// &:hover .description {
		// 	background-color: #8ec4fe;
		// }
	}
}
