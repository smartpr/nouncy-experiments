#ribbon {
	position: absolute;
	top: 0;
	right: 0;
	left: 0;
	height: 20px;
	background-color: Red;
	background-image: repeating-linear-gradient(35deg, transparent, transparent 15px, rgba(255,255,255,.3) 15px, rgba(255,255,255,.3) 30px);

	margin: 0;
	color: rgba(255, 255, 255, .8);
	text-transform: lowercase;
	font-size: .8em;
	text-align: center;

	z-index: 1;
}