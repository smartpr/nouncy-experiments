@keyframes pulse {
	from {
		transform: scale(.9);
	}
	to {
		transform: scale(1.3);
	}
}

#support {
	position: absolute;
	top: 20px;
	right: 0;
	width: 25em;

	z-index: 1;

	.tease {
		cursor: pointer;

		padding: 0 1em;

		transition: background-color .5s;
		background-color: lighten(rgb(255, 165, 0), 10%);
		&:hover {
			background-color: rgb(255, 165, 0);
		}

		// TODO: Yeah this is stupid. Resolve TODO in `inlinesvg.styl`
		// to resolve this.
		color: inherit !important;

		overflow-y: hidden;

		position: relative;
		svg {
			position: absolute;
			top: -15px;
			right: 5px;
			width: 80px;
			height: 80px;
			fill: lighten(rgb(255, 165, 0), 50%);

			animation: pulse 5s ease infinite alternate;
		}

		h2 {
			font-size: 1.2em;
			font-weight: 400;
			line-height: 50px;
			margin: 0;

			position: relative;
			z-index: 1;
		}
	}

	.engage {
		transition: max-height 2s;
		max-height: 0;
		overflow-y: hidden;

		background-color: lighten(rgb(255, 165, 0), 80%);
		padding: 1px 1em;

		.ranking {
			font-size: .8em;
		}

		.supporter {
			position: relative;
			display: inline-block;
			// font-size: .8em;
			line-height: 25px;
			margin: .3em .2em;

			cursor: pointer;

			background-color: rgba(255, 255, 255, .8);
			border-radius: .5em;
			background-clip: padding-box;
			padding-left: 35px;

			border: 1px solid transparent;
			&:hover {
				border-color: rgb(255, 165, 0);
			}

			&.anonymous {
				color: Grey;
				padding-left: 30px;
				.reach {
					margin-left: 0;
				}
			}

			&.you {
				background-color: lighten(rgb(255, 165, 0), 30%);
			}
			&.author {
				background-color: rgb(142, 196, 254);
			}

			.avatar {
				position: absolute;
				top: 0;
				bottom: 0;
				left: 0;
				width: 30px;
				background-position: center center;
				background-size: cover;
				background-repeat: no-repeat;
				border-radius: .5em 0 0 .5em;
				background-clip: padding-box;
				background-color: LightGrey;
			}
			.reach {
				display: inline-block;
				background-color: rgba(0, 0, 0, .5);
				color: White;
				line-height: 25px;
				border-radius: 0 .5em .5em 0;
				background-clip: padding-box;
				padding: 0 .5em;
				margin-left: 5px;
			}
		}

		.fold, .hint, .changeidentity, .anonymize {
			white-space: nowrap;
			text-decoration: underline;
			// font-size: .8em;
		}

		.share {
			button {
				display: block;
				width: 100%;
				appearance: none;
				border: 0 none;

				height: 50px;
				padding: 0 60px 0 60px;
				text-align: left;
				line-height: 1;

				// TODO: Yeah this is stupid. Resolve TODO in `inlinesvg.styl`
				// to resolve this.
				color: White !important;

				position: relative;
				svg {
					position: absolute;
					top: 0;
					bottom: 0;
					left: 0;
					width: 50px;
					background-color: White;
				}
				& > span {
					font-size: .8em;
				}
				.reach {
					position: absolute;
					top: 0;
					right: 0;
					bottom: 0;
					width: 60px;
					font-size: 2em;
					font-weight: 700;
					text-align: center;
					overflow-x: hidden;

					svg {
						background-color: inherit;
						top: -5px;
						left: 10px;
						width: 60px;
						height: 60px;
						fill: rgba(255, 255, 255, .3);
					}
					span {
						position: relative;
						z-index: 1;
						line-height: 50px;
						color: White;
					}
				}

				&.email {
					background-color: #5f9ea0;
					fill: #5f9ea0;
				}
				&.facebook {
					background-color: #3B5998;
					fill: #3B5998;
				}
				&.twitter {
					background-color: #019AD2;
					fill: #019AD2;
				}
				&.linkedin {
					background-color: #0073B2;
					fill: #0073B2;
				}
			}
		}

		.notify, .subscribe {
			font-size: .8em;
			input[type="email"] {
				width: 8em;
			}
		}
	}
	&.engage .engage {
		max-height: 650px;
	}
}