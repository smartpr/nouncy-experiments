main article {
	font-family: minion-pro, serif;
		/*georgia,*/
	font-size: 1.4em;
	line-height: 1.5;
	letter-spacing: .01rem;

	h1,
	h2,
	h3 {
		font-family: jaf-bernino-sans, sans-serif;
			/*Lato, freight-sans-pro, */
		font-weight: 700;
		line-height: 1.3;
	}
	h1 {
		font-size: 2em;
	}
	h2 {
		font-size: 1.8em;
	}
	h3 {
		font-size: 1.4em;
	}

	figure {
		img,
		iframe {
			width: 100%;
		}
		figcaption {
			font-family: jaf-bernino-sans, sans-serif;
			font-size: .6em;
			text-align: left;
		}
	}

	[data-widget] {
		position: relative;
	}

	header {
		.social {
			z-index: 1;
			a {
				display: inline-block;
				width: 35px;
				height: 35px;

				transition: fill .5s;
			}
		}
	}

	footer {
		border-top: 1px solid #ccc;

		font-family: jaf-bernino-sans, sans-serif;
		font-size: .6em;
		color: #999;

		margin-top: 3em;
		padding: 1em 0;
	}

}